{
  "name": "bridge-deal",
  "version": "0.0.0",
  "decription": "Deal bridge hands randomly, according to a recipe",
  "main": "index.js",
  "type": "module",
  "private": "true",
  "scripts": {
    "build": "peggy src/deal.peggy --format es && tsc",
    "postbuild": "copyfiles -u -a -f src/deal.js docs/js",
    "lint": "eslint .",
    "start": "hostlocal",
    "test": "c8 node --test",
    "update": "UPDATE_SNAPSHOT=1 npm test"
  },
  "keywords": [
    "bridge",
    "deal",
    "dealer",
    "hand",
    "cards",
    "trick",
    "cardgame",
    "random"
  ],
  "author": "Joe Hildebrand <joe-github@cursive.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hildjj/bridge-deal.git"
  },
  "homepage": "https://github.com/hildjj/bridge-deal#readme",
  "bugs": {
    "url": "https://github.com/hildjj/bridge-deal/issues"
  },
  "devDependencies": {
    "@cto.af/eslint-config": "6.0.13",
    "@eslint/markdown": "7.1.0",
    "@peggyjs/coverage": "2.0.4",
    "c8": "10.1.3",
    "copyfiles": "2.4.1",
    "eslint": "9.32.0",
    "hostlocal": "2.1.4",
    "peggy": "5.0.6",
    "snappy-snaps": "1.1.0",
    "typescript": "5.4.2",
    "typescript-eslint": "8.39.0"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20"
  }
}
